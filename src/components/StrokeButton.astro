---
const { link, text, variant } = Astro.props;
---

<a class={variant} href=`${link}`>{text}</a>

<style>
  a {
    padding: 1rem;
    display: block;
  }

  .black-red {
    border: solid var(--mine-shaft950);
    color: var(--mine-shaft950);
    border-radius: 10rem;
  }
  .black-red:hover {
    border: solid var(--red700);
    color: var(--red700);
  }

  @media (min-width: 900px) {
  }
</style>
