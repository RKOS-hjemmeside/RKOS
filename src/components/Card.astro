---
import StrokeButton from "./StrokeButton.astro";
const { title, hold, text } = Astro.props;
---

<article>
  <img src=`/imgs/${hold}.webp` alt="Billede af karateholdet" />
  <div class="info">
    <h2>{title}</h2>
    <p>{text}</p>
    <div class="button">
      <StrokeButton variant="black-red" text="LÃ¦s mere" page="hold" link="/hold.astro" />
    </div>
  </div>
</article>

<style>
  article {
    display: grid;
    grid-auto-rows: 0.5fr 1fr;
    background-color: white;
    margin: 10px;
    border-radius: var(--s);
    box-shadow: 0 4px 12px rgba(61, 61, 60, 0.2); /* det er : --mine-shaft900: #3d3d3c; */
    max-width: 370px;
    min-height: 385px;
  }
  article img {
    width: 100%;
    border-radius: var(--s) var(--s) 0 0;
    aspect-ratio: 16 / 8;
    object-fit: cover;
  }
  .info {
    display: grid;
    grid-auto-rows: 0fr 0fr 1fr;
    padding: var(--s) var(--m) var(--s);
    row-gap: 5px;
  }

  .button {
    width: 150px;
    margin-top: var(--s);
  }
</style>
