---
const { link, text, variant, page } = Astro.props;
---

<a class={variant} href={link} aria-label=`Go to ${page} side`>{text}</a>

<style>
  a {
    padding: 1rem;
    display: block;
    text-align: center;
  }

  .black-white {
    background-color: var(--mine-shaft950);
    color: var(--spring-wood50);
    border-radius: 10rem;
    width: 300px;
  }
  .black-white:hover {
    background-color: var(--spring-wood50);
    color: var(--mine-shaft950);
  }
  .black-red {
    background-color: var(--mine-shaft950);
    color: var(--spring-wood50);
    border-radius: 10rem;
  }
  .black-red:hover {
    background-color: var(--red700);
    color: var(--spring-wood50);
  }

  .red-white {
    background-color: var(--red700);
    color: var(--spring-wood50);
    border-radius: 10rem;
  }
  .red-white:hover {
    background-color: var(--spring-wood50);
    color: var(--red700);
  }

  .red-black {
    background-color: var(--red700);
    color: var(--spring-wood50);
    border-radius: 10rem;
  }
  .red-black:hover {
    background-color: var(--mine-shaft950);
    color: var(--spring-wood50);
  }
  /** DESKTOP **/
  @media (min-width: 900px) {
  }
</style>
